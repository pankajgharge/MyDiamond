<Window x:Class="DesktopDemoProject.View.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopDemoProject.View"
        mc:Ignorable="d"
        Title="LoginView" Height="550" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0"
                Background="#FFFFFF"
                CornerRadius="30"
                BorderThickness="0"
                BorderBrush="Transparent">
            <Border   
                BorderThickness="3"
                   >

                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <Trigger Property="UIElement.IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#169bea"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid>
                        
                        <Image x:Name="SlideshowImage1" Stretch="Fill"/>
                        <Image x:Name="SlideshowImage2" Stretch="Fill" Visibility="Hidden"/>

                        <StackPanel
                                HorizontalAlignment="Left" 
                                        VerticalAlignment="Bottom"
                                        Margin="20" Width="230">
                            
                                <TextBlock Text="Unleash Your Inner Diamond"
                   Foreground="White"
                   FontSize="30"
                   FontWeight="Bold"
                   TextWrapping="Wrap"
                   TextAlignment="Left"/>

                                <TextBlock Text="Just like a diamond, you shine brightest when you embrace your potential, work with dedication, and stay true to your journey."
                   Foreground="White"
                   FontSize="10"
                   Opacity="0.8"
                   TextWrapping="Wrap"
                   TextAlignment="Left"
                   Margin="0,10,0,0"/>
                            </StackPanel>
                        </Grid>
                    
                    <Button x:Name="PrevButton"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Click="PrevButton_Click"
            Margin="300,0,0,20"
            Width="40"
            Height="50"
            BorderBrush="#FFFFFF3D"
            BorderThickness="0"
            Cursor="Hand"
            ToolTip="Previous">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="30"
                                    Width="34"
                                    Height="34">
                                                <Image Source="/Images/icons8-back-arrow-50.png"
                                          
                                       Width="35"
                                       Height="35"
                                       Stretch="Uniform"
                                       RenderOptions.BitmapScalingMode="HighQuality"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>


                    <Button x:Name="NextButton"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Click="NextButton_Click"
            Margin="0,0,20,20"
            Width="40"
            Height="50"
            BorderBrush="#FFFFFF3D"
            BorderThickness="0"
            Padding="10"
            Cursor="Hand"
            ToolTip="Next">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="30"
                                    Width="34"
                                    Height="34">
                                                <Image Source="/Images/icons8-forward-button-50.png"
                                       Width="35"
                                       Height="35"
                                       Stretch="Uniform"
                                       RenderOptions.BitmapScalingMode="HighQuality"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

                  

               
            </Border>
        </Border>


        <Border Grid.Column="1" Background="#FFFFFF"  BorderBrush="Transparent">
     
        
            <Border   
            BorderThickness="3"
                Opacity="0.80">


                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#169bea"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>

              


                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height ="50"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="25"/>
                            <ColumnDefinition Width="25"/>
                            <ColumnDefinition Width="25"/>
                            <ColumnDefinition Width="5"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="LOG IN"
                       Foreground="DarkGray"
                       FontSize="10"
                       FontFamily="Montserrat"
                       Grid.Column="0"
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"/>

                        <Button x:Name="btnMinimize"
                   
                    BorderThickness="0"
                    Content="-"
                    Foreground="White"
                    FontSize="15"
                    FontFamily="Montserrat"
                    Cursor="Hand"
                    Grid.Column="1"
                    Click="btnMinimize_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" 
                                            Value="#28AEED"/>
                                    <Style.Triggers>
                                        <Trigger 
                                Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#278BEF"/>


                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>

                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Width="18" Height="18"
                                CornerRadius="9"
                                    Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="Center"/>

                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button x:Name="btnMaximize"
                   
BorderThickness="0"
Content="🗖"
Foreground="#FFFFFF"
FontSize="15"
FontFamily="Montserrat"
Cursor="Hand"
Grid.Column="2"
Click="btnMaximize_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#ECECEC"/>
                                    <Style.Triggers>
                                        <Trigger 
            Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#121212"/>


                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>

                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Width="18" Height="18"
            CornerRadius="9"
                Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"
                          HorizontalAlignment="Center"/>

                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button x:Name="btnClose"

BorderThickness="0"
Foreground="White"
Content="×"
FontSize="15"
FontFamily="Montserrat"
Cursor="Hand"
Grid.Column="3"
Click="btnClose_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="pink"/>
                                    <Style.Triggers>
                                        <Trigger 
         Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="Red"/>


                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>

                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Width="18" Height="18"
         CornerRadius="9"
             Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

                                    </Border>
                                </ControlTemplate>
                            </Button.Template>

                        </Button>

                    </Grid>

                    <StackPanel Width="300"
                                Height="450"
                            Grid.Row="2"
                            Orientation="Vertical"
                            Margin="0,40,0,10">
                        <Image Source="/Images/kohinoor.png"
                           Width="80" Height="80"/>


                        <TextBlock Text="Describe Yourself &#x0a;For Your Account."
                                 
                               Foreground="#121212"
                               FontSize="25"
                               FontWeight="Medium"
                               FontFamily="Urbanist"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Margin="0,10,0,20"/>


                        <Button x:Name="btnEmployee"
        BorderThickness="2"
        Foreground="Black"
        FontFamily="Poppins"
        Cursor="Hand"
        Grid.Column="2"
        Margin="30,0,170,10"
        Click="btnEmployee_Click">

                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#FFFFFF"/>
                                    <Setter Property="BorderBrush" Value="#ECECEC"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="BorderBrush" Value="#89CFF0"/>
                                            <Setter Property="Background" Value="white"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="BorderBrush" Value="Black"/>
                                            <Setter Property="Background" Value="#FFFFFF"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>

                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Grid>
                                        <Border x:Name="border"
                        Width="100" Height="90"
                        CornerRadius="10"
                        BorderThickness="2"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        Background="{TemplateBinding Background}">

                                            <StackPanel Orientation="Vertical"
                                VerticalAlignment="Stretch"
                                HorizontalAlignment="Stretch">
                                                <Image Source="/Images/Employeee.png" Width="70" Height="50" Margin="0,10,0,0"/>
                                                <TextBlock x:Name="btnText"
                                   Text="As Employee"
                                   Foreground="LightGray" 
                                   FontFamily="Poppins" 
                                   FontSize="10" 
                                   HorizontalAlignment="Center" 
                                   Padding="0" 
                                   Margin="10,5,10,0"/>
                                            </StackPanel>
                                        </Border>

                                        <Grid VerticalAlignment="Top" HorizontalAlignment="Center">
                                            <Ellipse x:Name="checkmarkBackground"
                             Width="22" Height="22"
                             Fill="#000000"
                             Stroke="#FFFFFF"
                             StrokeThickness="1"
                             Visibility="Collapsed"
                             Margin="0,-12,0,0"/>

                                            <TextBlock x:Name="checkmark"
                               Text="✔"
                               FontSize="12"
                               Foreground="#FFFFFF"
                               Visibility="Collapsed"
                               Margin="0,-8,0,0"/>
                                        </Grid>
                                    </Grid>

                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="border" Property="BorderBrush" Value="Black"/>
                                            <Setter TargetName="btnText" Property="Foreground" Value="Black"/>
                                            <Setter TargetName="checkmarkBackground" Property="Visibility" Value="Visible"/>
                                            <Setter TargetName="checkmark" Property="Visibility" Value="Visible"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>




                        <Button x:Name="btnAdmin"
        BorderThickness="0"
        Foreground="Black"
        FontFamily="Montserrat"
        Cursor="Hand"
        Grid.Column="3"
        Margin="160,-100,40,40"
        Click="btnAdmin_Click">

                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#FFFFFF"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="white"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>

                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Grid>
                                        
                                        <Border x:Name="border"
                        Width="100" Height="90"
                        CornerRadius="10"
                        BorderThickness="2"
                        BorderBrush="#ECECEC"
                        Background="{TemplateBinding Background}">

                                            <StackPanel Orientation="Vertical"
                                VerticalAlignment="Stretch"
                                HorizontalAlignment="Stretch">
                                                <Image Source="/Images/Admin.png" Width="70" Height="50" Margin="0,10,0,0"/>
                                                <TextBlock x:Name="btnText"
                                   Text="As Admin"
                                   Foreground="LightGray" 
                                   FontFamily="Poppins"
                                   FontSize="10"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>
                                            </StackPanel>
                                        </Border>

                                        <Grid VerticalAlignment="Top" HorizontalAlignment="Center">
                                            <Ellipse x:Name="checkmarkBackground"
                             Width="22" Height="22"
                             Fill="#000000"
                             Stroke="#FFFFFF"
                             StrokeThickness="1"
                             Visibility="Collapsed"
                             Margin="0,-12,0,0"/>

                                            <TextBlock x:Name="checkmark"
                               Text="✔"
                               FontSize="12"
                               Foreground="#FFFFFF"
                               Visibility="Collapsed"
                               Margin="0,-8,0,0"/>
                                        </Grid>
                                    </Grid>

                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="border" Property="BorderBrush" Value="Black"/>
                                            <Setter TargetName="btnText" Property="Foreground" Value="Black"/>
                                            <Setter TargetName="checkmarkBackground" Property="Visibility" Value="Visible"/>
                                            <Setter TargetName="checkmark" Property="Visibility" Value="Visible"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>




                        <Button x:Name="btnDelivery"
        BorderThickness="0"
        Foreground="Black"
        FontFamily="Montserrat"
        Cursor="Hand"
        Grid.Column="4"
        Margin="10,-20,20,0"
        Click="btnDelivery_Click">

                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#FFFFFF"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="white"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>

                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Grid>
                                        
                                        <Border x:Name="border"
                        Width="100" Height="90"
                        CornerRadius="10"
                        BorderThickness="2"
                        BorderBrush="#ECECEC"
                        Background="{TemplateBinding Background}">

                                            <StackPanel Orientation="Vertical"
                                VerticalAlignment="Stretch"
                                HorizontalAlignment="Stretch">
                                                <Image Source="/Images/delivery.png"
                               Width="60"
                               Height="50"
                               Margin="0,10,0,0"/>
                                                <TextBlock x:Name="btnText"
                                   Text="As Delivery &#x0a;Management Service"
                                   Foreground="LightGray"
                                   FontSize="10"
                                   FontFamily="Poppins"
                                   TextAlignment="Center"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Margin="0,0,0,0"/>
                                            </StackPanel>
                                        </Border>

                                        <Grid VerticalAlignment="Top" HorizontalAlignment="Center">
                                            <Ellipse x:Name="checkmarkBackground"
                             Width="22" Height="22"
                             Fill="#000000"
                             Stroke="#FFFFFF"
                             StrokeThickness="1"
                             Visibility="Collapsed"
                             Margin="0,-12,0,0"/>

                                            <TextBlock x:Name="checkmark"
                               Text="✔"
                               FontSize="12"
                               Foreground="#FFFFFF"
                               Visibility="Collapsed"
                               Margin="0,-8,0,0"/>
                                        </Grid>
                                    </Grid>

                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="border" Property="BorderBrush" Value="Black"/>
                                            <Setter TargetName="btnText" Property="Foreground" Value="Black"/>
                                            <Setter TargetName="checkmarkBackground" Property="Visibility" Value="Visible"/>
                                            <Setter TargetName="checkmark" Property="Visibility" Value="Visible"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                    </StackPanel>



                </Grid>
            </Border>
        </Border>
    </Grid>
</Window>
