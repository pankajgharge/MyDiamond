<Window x:Class="DesktopDemoProject.View.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DesktopDemoProject.View" 
      mc:Ignorable="d" 
      xmlns:DiamondDisplay="clr-namespace:DesktopDemoProject.UserControls"
      WindowStyle="None"
      Name="loginWindow"
      Title="Login" Height="550" Width="800"
      ResizeMode="NoResize"
      Tag="{Binding WindowTag}"
      xmlns:i1="http://schemas.microsoft.com/xaml/behaviors"
        WindowStartupLocation="CenterOwner"
      AllowsTransparency="True"
      >
   
     <i1:Interaction.Triggers>
        <i1:EventTrigger EventName="MouseLeftButtonDown">
            <i1:InvokeCommandAction Command="{Binding DragMoveWindowCommand}" />
        </i1:EventTrigger>
    </i1:Interaction.Triggers>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Background="#FFFFFF"  CornerRadius="30" BorderThickness="0" BorderBrush="Transparent">
            <Border   
                BorderThickness="3"  >

                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <Trigger Property="UIElement.IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#169bea"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Grid>
                    <DiamondDisplay:DiamondShowCaseUserControl></DiamondDisplay:DiamondShowCaseUserControl>
                </Grid>

            </Border>
        </Border>

        <Border Grid.Column="1" Background="#FFFFFF" BorderBrush="Transparent">

            <Border   
            BorderThickness="3"
                Opacity="0.80">
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#169bea"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>

                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height ="50"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="25"/>
                            <ColumnDefinition Width="25"/>
                            <ColumnDefinition Width="25"/>
                            <ColumnDefinition Width="5"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="btnBack"
        Content="←"
        Foreground="Black"
        FontSize="18"
        FontWeight="Bold"                        
        FontFamily="Montserrat"
        Cursor="Hand"
        Command="{Binding Path=BackCommand}" CommandParameter="{Binding ElementName=loginWindow, Mode=OneWay}"
        BorderThickness="0"
    
        HorizontalAlignment="Left"
        Margin="10,0,0,0"
        >
                            <Button.Style>
                                <Style TargetType="Button">
                                    
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="Black"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button x:Name="btnMinimize"
                   
                    BorderThickness="0"
                    Content="-"
                    Foreground="White"
                    FontSize="15"
                    FontFamily="Montserrat"
                    Cursor="Hand"
                    Grid.Column="1"
                    Command="{Binding MinimizeWindowCommand}" CommandParameter="{Binding ElementName=loginWindow, Mode=OneWay}">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#28AEED"/>
                                    <Style.Triggers>
                                        <Trigger 
                                Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#278BEF"/>


                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>

                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Width="18" Height="18"
                                CornerRadius="9"
                                    Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="Center"/>

                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button x:Name="btnMaximize"                   
                                BorderThickness="0"
                                Content="🗖"
                                Foreground="#FFFFFF"
                                FontSize="15"
                                FontFamily="Montserrat"
                                Cursor="Hand"
                                Grid.Column="2"
                                Command="{Binding MaxWindowCommand }" CommandParameter="{Binding ElementName=loginWindow, Mode=OneWay}">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#ECECEC"/>
                                    <Style.Triggers>
                                        <Trigger 
            Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#121212"/>


                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>

                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Width="18" Height="18"
                                CornerRadius="9"
                Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"
                          HorizontalAlignment="Center"/>

                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button x:Name="btnClose"
                            BorderThickness="0"
                            Foreground="White"
                            Content="×"
                            FontSize="15"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Grid.Column="3"
                            Command="{Binding CloseCommand}">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="pink"/>
                                    <Style.Triggers>
                                        <Trigger 
         Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="Red"/>


                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>

                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Width="18" Height="18"
         CornerRadius="9"
             Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

                                    </Border>
                                </ControlTemplate>
                            </Button.Template>

                        </Button>

                    </Grid>
                    <StackPanel Width="300"
                                Height="450"
                            Grid.Row="2"
                            Orientation="Vertical"
                            Margin="0,40,0,10">
                        <Image Source="/Images/kohinoor.png"
                           Width="80" Height="80"/>

                        <TextBlock Text="Welcome Back! &#x0a;Glad to see you, Again!"
                                Foreground="#121212"
                               FontSize="25"
                               FontWeight="Medium"
                               FontFamily="Montserrat"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Margin="0,5,5,20"/>





                        <Border Width="230" Height="40" Background="#F7F8F9" CornerRadius="10">
                            <TextBox x:Name="EmailTextBox"
                     Width="230" Height="40"
                     Background="Transparent"
                     BorderThickness="0"
                     Foreground="Gray"
                     FontSize="14"
                     VerticalContentAlignment="Center"
                    Text="{Binding Email}"
                                       GotFocus="EmailTextBox_GotFocus"                                  
                                     
         
             LostFocus="EmailTextBox_LostFocus">
                               
                            </TextBox>
                        </Border>


                        <Border Width="230" Height="40"
                                Background="#F7F8F9" 
                                CornerRadius="10"
                                Margin="0,20,0,0">
                            <Grid>
                                
                         <TextBox x:Name="PasswordTextBox"
                         Width="230" Height="40"
                         Background="Transparent"
                         BorderThickness="0"
                         Foreground="#000000"
                         FontSize="14"
                         VerticalContentAlignment="Center"
                         Text= " {Binding Password}"
                         Visibility="Collapsed"  
                         GotFocus="PasswordTextBox_GotFocus"
                         LostFocus="PasswordTextBox_LostFocus"/>

                         <PasswordBox x:Name="PasswordBox"
                             Width="230" Height="40"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="Black"
                             FontSize="14"
                             VerticalContentAlignment="Center"                                            
                             Password=""/>

                        <Button Name="TogglePasswordVisibility" Width="30" Height="30"
                        HorizontalAlignment="Right" VerticalAlignment="Center"
                        Background="Transparent" BorderThickness="0"
                        Click="TogglePasswordVisibility_Click">
                        <Image Name="EyeIcon" Source="/Images/icons8-eye-48.png" Width="20" Height="20"/>
                        </Button>
                            </Grid>
                        </Border>
                        <TextBlock Text="Forgot Password ?"
                                    HorizontalAlignment="Right"
                                    Foreground="#121212"
                                    FontSize="12"
                                    FontWeight="Medium"
                                    FontFamily="Montserrat"
                                    Cursor="Hand"
                                    Margin="0,10,40,0"/>

                        <Button x:Name="btnLogin" Command="{Binding Path=LoginCommand}" CommandParameter="{Binding ElementName=loginWindow, Mode=OneWay}" 
                        BorderThickness="0"
                        Foreground="White"
                        Content="Log In"
                        FontSize="12"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        Grid.Column="2"                                
                        Margin="0,10,20,0"  >
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#000000" />
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="darkgray"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Width="230" Height="40"
                                            CornerRadius="5"
                                             Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"
                                            HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>

                        </Button>
                        <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,15,0,0">

                            <TextBlock Text="Don't have an account ?"
                                              Foreground="#121212"
                                             FontSize="12"
                                            FontWeight="Light"
                                        FontFamily="Montserrat"
                                        />               
                            <TextBlock Text="Sign Up "
                                Foreground="#121212"
                                FontSize="12"
                                FontWeight="Medium"
                                FontFamily="Montserrat"
                                Cursor="Hand"
                               Margin="8,0,0,0"/>
                        </StackPanel>

                    </StackPanel>
                </Grid>
            </Border>
        </Border>
    </Grid>

</Window>